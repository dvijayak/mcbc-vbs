{
    "name": "mcbc-vbs-ui",
    "description": "Website + Admin backend for MCBC VBS",
    "version": "1.0.0",
    "config": {
        "project": "mcbc-vbs-ui"
    },
    "scripts": {
        "ng": "ng",
        "start": "ng serve $npm_package_config_project --poll 2000 --progress --watch --port 4200",
        "build": "ng build $npm_package_config_project",
        "build:serve": "cd dist/$npm_package_config_project && lite-server",
        "dev": "run-s build setup:inotify build:serve",
        "clean": "rimraf dist",
        "setup:inotify": "sh ./scripts/increase-inotify-limit.sh",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^6.0.3",
        "@angular/common": "^6.0.3",
        "@angular/compiler": "^6.0.3",
        "@angular/core": "^6.0.3",
        "@angular/forms": "^6.0.3",
        "@angular/http": "^6.0.3",
        "@angular/platform-browser": "^6.0.3",
        "@angular/platform-browser-dynamic": "^6.0.3",
        "@angular/router": "^6.0.3",
        "@swimlane/ngx-datatable": "^13.0.1",
        "core-js": "^2.5.4",
        "@mdi/font": "^2.2.43",
        "ngx-materialize": "^6.0.0",
        "ngx-pipes": "^2.1.7",
        "rxjs": "^6.0.0",
        "rxjs-compat": "^6.2.0",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.6.6",
        "@angular/cli": "~6.0.7",
        "@angular/compiler-cli": "^6.0.3",
        "@angular/language-service": "^6.0.3",
        "@types/jasmine": "~2.8.6",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "codelyzer": "~4.2.1",
        "cross-var": "^1.1.0",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~1.7.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.0",
        "karma-jasmine": "~1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "lite-server": "^2.3.0",
        "npm-run-all": "^4.1.3",
        "protractor": "~5.3.0",
        "ts-node": "~5.0.1",
        "tslint": "~5.9.1",
        "typescript": "~2.7.2"
    }
}
